{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "allowJs": true  
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"]  
}
